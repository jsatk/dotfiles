# Paths {{{

set header_cache        = ~/.mutt/credit-karma/cache/headers # where to store headers
set message_cachedir    = ~/.mutt/credit-karma/cache/bodies  # where to store bodies
set alias_file          = ~/.mutt/credit-karma/alias         # where to store aliases
set signature           = ~/.mutt/credit-karma/sig           # my signature file
set certificate_file    = ~/.mutt/credit-karma/certificates

# }}}
# Account Settings {{{

set from          = "jesse.atkinson@creditkarma.com"
set folder        = "~/.mail/credit-karma"
set spoolfile     = "+Inbox"
set postponed     = "+[Gmail]/Drafts"
set move          = no # gmail does that
set trash         = "+[Gmail]/All Mail" # Archive, don't delete
set mbox          = "+[Gmail]/All Mail"
set record        = "+[Gmail]/Sent Mail"
set sendmail      = "/usr/local/bin/msmtp -a credit-karma" # Send email from this account using this config for msmtp

# }}}
# Mailboxes to show in the sidebar {{{

unmailboxes * # When we switch accounts unset all folders added to sidebar by the previous account
mailboxes +"Inbox" \
          +"[Gmail]/All Mail" \
          +"[Gmail]/Drafts" \
          +"[Gmail]/Important" \
          +"[Gmail]/Sent Mail" \
          +"[Gmail]/Spam" \
          +"[Gmail]/Starred" \
          +"[Gmail]/Trash" \
          +"../temporary/search"

# }}}
# vim: ft=muttrc
