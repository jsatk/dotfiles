# jsatk.us {{{

account jsatk
host smtp.fastmail.com
port 465
protocol smtp
auth plain
from jesse@jsatk.us
user jesse@jsatk.us
tls on
tls_starttls off
tls_trust_file ~/.mutt/DigiCertGlobalRootCA.crt
# The `&& echo` bit is to force line ending after the password.  If we do not
# do this we get the error is longer than 500 characters, or is not terminated
# by newline.
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/account.jsatk.password.gpg && echo"

account default : jsatk

# }}}
# Credit Karma {{{

account credit-karma
host smtp.gmail.com
port 587
protocol smtp
auth on
from jesse.atkinson@creditkarma.com
user jesse.atkinson@creditkarma.com
tls on
# Taken directly from Gmail and converted from DER to PEM.  Command used below.
# `openssl x509 -inform DER -in ~/.mutt/GlobalSign.cer -outform PEM -out ~/.mutt/GlobalSign.crt`
tls_trust_file ~/.mutt/GlobalSign.crt
# The `&& echo` bit is to force line ending after the password.  If we do not
# do this we get the error is longer than 500 characters, or is not terminated
# by newline.
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/account.credit-karma.password.gpg && echo"

# }}}
# vim: ft=config
