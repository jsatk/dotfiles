# jsatk.us {{{

IMAPAccount jsatk
# Address to connect to
Host imap.fastmail.com
User jesse@jsatk.us
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/account.jsatk.password.gpg"
CertificateFile /etc/ssl/cert.pem
# Fixes weird auth issue
# See: https://sourceforge.net/p/isync/mailman/message/35516737/
AuthMechs LOGIN
# Use SSL
SSLType IMAPS

IMAPStore jsatk-remote
Account jsatk

MaildirStore jsatk-local
# The trailing "/" is important
Path ~/.mail/jsatk/
Inbox ~/.mail/jsatk/Inbox
SubFolders Verbatim

Channel jsatk
Master :jsatk-remote:
Slave :jsatk-local:
# Don't sync drafts since they are stored unencrypted
Patterns * !Drafts
# Automatically create missing mailboxes, both locally and on the server
Create Both
# Save the synchronization state files in the relevant directory
SyncState *

# }}}
# Credit Karma {{{

IMAPAccount credit-karma
# Address to connect to
Host imap.gmail.com
User jesse.atkinson@creditkarma.com
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mutt/account.credit-karma.password.gpg"
