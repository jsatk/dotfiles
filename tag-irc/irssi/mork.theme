    nick_changed = "%G* $0 is now known as {channick $1}";
    new_topic = "%G* {nick $0} changes topic to '$2'";
    endofnames = "";
    query_start = "";
    query_stop = "";
    no_query = "";
    query_server_changed = "";
    daychange = "Day changed %%d.%%m.%%Y";
