    whois_modes =  "{nick $0} has modes $1";
    whois_realhost = "{nick $0} has hostname $1-";
    whois_usermode = "{nick $0} has usermode $1";
    whois_channels = "{nick $0} on $1";
    whois_away = "{nick $0} is away: $1";
