    whois_not_found = "There is no such nick $0";
    who = "{channelhilight $[-10]0} %|{nick $[!9]1} $[!3]2 $[!2]3 $4@$5 {comment {hilight $6}}";
    end_of_who = "{nick $0} End of /WHO list\n%C-";
  };
};