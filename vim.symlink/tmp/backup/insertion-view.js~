/* global dependecies */
var Marionette = require('backbone.marionette');

/* local dependecies */
var Template = require('../templates/CampaignInsertion.hbs');

var InsertionView = Marionette.ItemView.extend({
    tagName: 'div',
    className: 'panel sc-panel sc-campaign-insertion-orders',
    template: Template,
    ui: {
        'insertionOrders': '#campaign-insertion-orders'
    },
    events: {
        'change @ui.insertionOrders': 'updateInsertionOrder'
    },
    onShow: function() {
        this.ui.insertionOrders.select2({
            width: '100%',
            placeholder: 'Select an Insertion Order',
            allowClear: true,
            /** disable search */
            minimumResultsForSearch: Infinity
        });
    },
    /** @param {$.Event} event */
    updateInsertionOrder: function(event) {
        // TODO: Trigger proper events.
    }
});

module.exports = InsertionView;
