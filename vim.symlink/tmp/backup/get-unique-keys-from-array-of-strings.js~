Input: ['zen', 'crayon', 'water', 'bat', 'mega', 'zebra', 'bike', 'oak', 'bear', 'car'];
Output: ['b','bat','bear','bike','c','car','crayon','m','mega','o','oak','w','water','z','zebra','zen'];

function getOutput(array) {
    return array.map(function(string) {
        return string.charAt(0);
    }).filter(function(el, index, arr) {
        return arr.indexOf(el) === index;
    }).concat(array).sort();
}

Input: ['zen', 'crayon', 'water', 'bat', 'mega', 'zebra', 'bike', 'oak', 'bear', 'car'];
Output: {
    b: ['bat','bear','bike'],
    c: ['car','crayon'],
    m: ['mega'],
    o: ['oak'],
    w: ['water'],
    z: ['zebra','zen']
};

function getOutput(inputArr) {
    return inputArr.sort().reduce(function(memo, str) {
        var key = str.charAt(0);
        memo[key] = [str].concat(memo[key] || []);
        return memo;
    }, {});
}
