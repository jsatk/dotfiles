AdvisorApp.module('CampaignModule.Summary', function(Module, App) {
    Module.SummaryWithoutChartView = Module.BaseView.extend({
        template: Handlebars.templates.SummaryWithoutChart,
        regions: function(options) {
            // Pinterest doesn't yet support the pacing meter.
            return options.model.getPlatform() === 'pinterest' ? {} : { pacingRegion: '.pacing' };
        },

        initialize: function() {
            this.createPacingView();
        }
    });
});
