function Snake(size) {
    this.size = size;
    this.createGrid();
}

Snake.prototype.createGrid = function() {
    var row = [];
    this.grid = [];

    for (var i = 0; i < this.size; i++) {
        row.push(0);
    }

    for (var i = 0; i < this.size; i++) {
        this.grid.push(row.slice(0));
    }
};
