{
  "coc.preferences.formatOnType": true,
  "codeLens.enable": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "metals.statusBarEnabled": true,
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  }
}
